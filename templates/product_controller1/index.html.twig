{% extends 'base.html.twig' %}

{% block body %}

    {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> #}
    {# Mostrar mensajes de Ã©xito #}
    {% for flashMessage in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {# Mostrar mensajes de peligro (error) #}
    {% for flashMessage in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">List of products</h2>
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="tablaPacientes">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Sku</th>
                            <th>Product_name</th>
                            <th>Description</th>
                            <th>created_at</th>
                            <th>updated_at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.sku }}</td>
                                <td>{{ product.productName }}</td>
                                <td>{{ product.description }}</td>
                                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ product.updateAt ? product.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    {# <button type="button" class="btn btn-primary"> Primary </button> #}
                                    <a class="btn btn-primary" href="{{ path('app_product_controller1_show', {'id': product.id}) }}" class="btn btn-info">Show </a>
                                    <a class="btn btn-primary" href="{{ path('app_product_controller1_edit', {'Sku': product.Sku}) }}" class="btn btn-warning">Edit</a>
                                    {{ include('product_controller1/_delete_form.html.twig') }} 

                                </td>
                            </tr>
                            <tr>
                                <td colspan="7" style="border-top: 1px solid #ddd;"></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">No se encontraron registros.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('app_product_controller1_new') }}" class="btn btn-success">Create a new product</a>
</div>
{% endblock %}
